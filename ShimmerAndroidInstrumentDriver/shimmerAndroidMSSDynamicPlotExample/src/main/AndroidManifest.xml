<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="com.shimmerresearch.shimmergraphandlogservice">
    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application android:label="@string/app_name" android:icon="@drawable/shimmer_icon">
        <activity android:label="@string/app_name" android:screenOrientation="portrait" android:name="com.shimmerresearch.shimmergraphandlogservice.ShimmerAndroidDynamicGraphExample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name="com.shimmerresearch.shimmergraphandlogservice.DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog">
        </activity>
		<activity android:name="com.shimmerresearch.shimmergraphandlogservice.ConfigureActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.Dialog" android:label="@string/configure_device"></activity>
    <activity android:name="com.shimmerresearch.shimmergraphandlogservice.SensorViewActivity"  android:screenOrientation="landscape" android:theme="@android:style/Theme.Dialog" android:label="@string/configure_device"></activity>
     <activity android:name="com.shimmerresearch.shimmergraphandlogservice.CommandsActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:label="@string/commands"></activity>
    <activity android:name="com.shimmerresearch.shimmergraphandlogservice.LogFileActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:label="@string/logfile"></activity>
   <service android:enabled="true" android:name="com.shimmerresearch.service.ShimmerService" />
    </application>
</manifest>